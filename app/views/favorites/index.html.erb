<h1>Favorite Pictures</h1>
<table>
    <thead>
    <tr>
        <th>Image</th>
        <th>Content</th>
        <th>User</th>
        <th colspan="3"></th>
    </tr>
    </thead>
    <tbody>
    <%= @favorite.each do |favorite| %>
        <tr>
        <td><%= image_tag favorite.picture.image.url %></td>
        <td><%= favorite.picture.content %></td>
        <td><%= favorite.user.name %></td>
        <td><%= link_to 'Show', favorite.picture %></td>
        </tr>
    <% end %>
    </tbody>
</table>
