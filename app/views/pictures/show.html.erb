<p>
  <strong>Image:</strong>
  <%= image_tag @picture.image.url %>
</p>

<p>
  <strong>Content:</strong>
  <%= @picture.content %>
</p>

<% if logged_in? %>
  <% unless @picture.user_id == current_user.id %>
    <% if @favorite.present? %>
      <%= link_to 'お気に入り解除する', favorite_path(id: @favorite.id), method: :delete, class: 'btn btn-primary' %>
    <% else %>
      <%= link_to 'お気に入りする', favorites_path(picture_id: @picture.id), method: :post, class: 'btn btn-primary' %>
    <% end %>
  <% end %>

  <% if @picture.user_id == current_user.id %>
    <%= link_to 'Edit', edit_picture_path(@picture), class: 'btn btn-primary' %>
    <%= link_to 'Destroy', @picture, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-primary' %>
  <% end %>
<% end %>

<%= link_to 'Back', pictures_path, class: 'btn btn-primary' %>
